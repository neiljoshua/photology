%a.scroll
	%i.icon
- @categories.each do |category|
	- last_image = category.photos.last
	.category
		- if last_image.present?
			= link_to lazy_image_tag(last_image.image.url, alt: category.name ), category_path(category), {:class => 'category_image'}
			= link_to category_path(category), class: 'category_link center' do
				= category.name
				%span.category_caption= category.caption
